<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MatchActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg"
            android:padding="@dimen/margin_sp16"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">



                <ImageView
                    android:id="@+id/imgOptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="26dp"
                    android:src="@drawable/ic_cut" />


            </RelativeLayout>



            <com.smirk.customView.PoppinsBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_marginTop="100dp"
                android:padding="10dp"
                android:text="It’s a Match!"
                android:textColor="@color/white"
                android:textSize="22dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:layout_gravity="center_horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="@dimen/margin_dp10"
                    android:src="@drawable/img6" />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    android:layout_marginLeft="@dimen/margin_dp10"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/img6" />
            </LinearLayout>

            <com.smirk.customView.PoppinsMTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You &amp; Laurel both liked each other.Now you can send a message to her."
                android:padding="@dimen/sp14"
                android:layout_marginTop="36dp"
                android:textColor="@color/white"
                android:textSize="18sp"/>
            <com.smirk.customView.PoppinsMButton
                android:id="@+id/btnMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/ic_btn_bg"
                android:gravity="center"
                android:text="Start messaging"
                android:textColor="@color/black_light"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <com.smirk.customView.PoppinsMTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I’ll message later"
                android:padding="@dimen/sp14"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:textSize="18sp"/>




        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>