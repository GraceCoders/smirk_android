<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="128dp"
            android:orientation="vertical"
            android:padding="16dp">

            <com.smirk.customView.PoppinsRTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Who do you want to laugh with?"
                android:textColor="@color/white"
                android:textSize="32dp" />

            <com.smirk.customView.PoppinsMTextView
                android:id="@+id/tvFriend"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/ic_et_bg"
                android:gravity="center"
                android:text="Just Friend"
                android:textColor="@color/black_light"
                android:textSize="16sp" />

            <com.smirk.customView.PoppinsMTextView
                android:id="@+id/tvRomantic"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/ic_btn_white_bg"
                android:gravity="center"
                android:text="Romantic Interest"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgNext"
            android:layout_width="119dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="100dp"
            android:src="@drawable/btn" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
