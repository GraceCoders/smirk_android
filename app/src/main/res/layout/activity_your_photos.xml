                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="105dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
