                    <ImageView
                        android:layout_width="105dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_add_img" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
