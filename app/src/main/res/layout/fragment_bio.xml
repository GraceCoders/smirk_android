<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="18sp"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".fragments.BioFragment">
    <com.smirk.customView.PoppinsBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black_light"/>
    <com.smirk.customView.PoppinsRTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/margin_dp10"
        android:textColor="@color/txt"/>

    <com.smirk.customView.PoppinsBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_dp10"
        android:textSize="18sp"
        android:textColor="@color/black_light"/>
    <com.smirk.customView.PoppinsRTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna. "
        android:textSize="18sp"
        android:layout_marginTop="@dimen/margin_dp10"
        android:textColor="@color/txt"/>

    <com.smirk.customView.PoppinsBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorite  TV shows / movies"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_dp10"
        android:textSize="18sp"
        android:textColor="@color/black_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp">
        <com.smirk.customView.PoppinsRTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_dis_me"
            android:text="Despicable Me"
            android:gravity="center"
            android:textColor="@color/txt"
            android:textSize="@dimen/sp14"/>
        <com.smirk.customView.PoppinsRTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_dis_me"
            android:text="Friends"
            android:layout_marginLeft="@dimen/margin_dp10"
            android:gravity="center"
            android:textColor="@color/txt"
            android:textSize="@dimen/sp14"/>
    </LinearLayout>
    <com.smirk.customView.PoppinsRTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_heist_money"
        android:text="Money Heist"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="@color/txt"
        android:textSize="@dimen/sp14"/>



</LinearLayout>