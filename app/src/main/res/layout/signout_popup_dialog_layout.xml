<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="12dp"
    tools:ignore="MissingConstraints">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_dp10"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/margin_dp10"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:cardBackgroundColor="@android:color/transparent"
        card_view:cardCornerRadius="8dp"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:background="@drawable/bg"
            >
            <com.smirk.customView.PoppinsRTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Signout"
                android:lineSpacingExtra="3sp"
                android:translationY="-1.32sp"
                android:gravity="top"
                android:padding="@dimen/margin_dp10"
                android:textSize="@dimen/margin_dp20"
                android:textColor="@color/white"
                />

            <com.smirk.customView.PoppinsRTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/signout_msg"
                android:lineSpacingExtra="3sp"
                android:translationY="-1.32sp"
                android:paddingLeft="@dimen/margin_dp10"
                android:paddingRight="@dimen/margin_dp10"
                android:gravity="center_horizontal"
                android:textSize="@dimen/sp14"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/margin_dp10" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.smirk.customView.PoppinsMButton
                    android:id="@+id/btnNo"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp58"
                    android:layout_weight=".5"
                    android:layout_marginTop="@dimen/margin_dp10"
                    android:text="No"
                    android:textSize="@dimen/sp14"
                    android:textStyle="bold"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp58"/>
                <com.smirk.customView.PoppinsMButton
                    android:id="@+id/btnYes"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp58"
                    android:layout_weight=".5"
                    android:background="@null"
                    android:layout_marginTop="@dimen/margin_dp10"
                    android:text="Yes"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>

